<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- When the RadioButton is selected -->
    <item android:drawable="@drawable/selected_user_background" android:state_checked="true"/>

    <!-- When the RadioButton is pressed -->
    <item android:drawable="@drawable/pressed_user_background" android:state_pressed="true"/>

    <!-- Default state when the RadioButton is not selected -->
    <item android:drawable="@drawable/default_user_background"/>

</selector>
