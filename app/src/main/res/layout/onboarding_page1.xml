<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_pager1"
    android:padding="24dp">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie1"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        app:lottie_rawRes="@raw/blood_donation1"
        app:lottie_autoPlay="true"
        app:lottie_loop="true" />

    <TextView
        android:id="@+id/title1"
        android:layout_below="@id/lottie1"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donate Blood"
        android:textSize="34sp"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_below="@id/title1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Every drop counts. Be the reason someone lives."
        android:textSize="18sp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:paddingStart="24dp"
        android:paddingEnd="24dp" />
</RelativeLayout>
