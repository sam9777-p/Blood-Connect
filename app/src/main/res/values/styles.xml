<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoleInputField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#009688</item>
        <item name="boxBackgroundColor">#FAFAFA</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
    </style>

    <style name="BloodGroupButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="cornerRadius">12dp</item>
        <item name="strokeColor">#D32F2F</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">#D32F2F</item>
    </style>

    <style name="BloodButton">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_circle_red</item>
        <item name="android:textStyle">bold</item>
    </style>




</resources>